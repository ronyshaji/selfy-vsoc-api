{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://127.0.0.1:8000/sot/vehicleInfoArray",
    "title": "vehicleInfoArray",
    "description": "Array of vehicleInfo objects for the V&V Tool",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "valid": {
                "type": "boolean"
            },
            "vehicle_status": {
                "type": "object",
                "properties": {
                    "acceleration": {
                        "type": "integer",
                        "enum": [-1, 0, 1]
                    },
                    "throttle_input": {
                        "type": "integer",
                        "enum": [-1, 0, 1]
                    },
                    "lane_position": {
                        "type": "integer",
                        "enum": [-1, 0, 1]
                    }
                },
                "required": ["acceleration", "throttle_input", "lane_position"]
            },
            "platoon_status": {
                "type": "object",
                "properties": {
                    "distance_error": {
                        "type": "integer",
                        "enum": [-1, 0, 1]
                    },
                    "relative_speed": {
                        "type": "integer",
                        "enum": [-1, 0, 1]
                    },
                    "id_of_preceeding_vehicle": { "type": "number" }
                },
                "required": ["distance_error", "relative_speed", "id_of_preceeding_vehicle"]
            },
            "safety_mode": {
                "type": "integer",
                "enum": [-1, 0, 1]
            }
        },
        "required": ["valid", "vehicle_status", "platoon_status", "safety_mode"],
        "additionalProperties": false
    },
    "maxItems": 100
}
